<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="TrabPOOIIIPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.unisc.trabpoo3.model.Empresa</class>
    <class>br.unisc.trabpoo3.model.Usuario</class>
    <class>br.unisc.trabpoo3.model.Recurso</class>
    <class>br.unisc.trabpoo3.model.Departamento</class>
    <class>br.unisc.trabpoo3.model.Projeto</class>
    <class>br.unisc.trabpoo3.model.Tarefa</class>
    <class>br.unisc.trabpoo3.model.BugTarefa</class>
    <class>br.unisc.trabpoo3.model.EquipeProjeto</class>
    <class>br.unisc.trabpoo3.model.EquipeTarefa</class>
    <class>br.unisc.trabpoo3.model.RecursoTarefa</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/trabpoo3"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
